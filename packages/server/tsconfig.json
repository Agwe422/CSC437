{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "baseUrl": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "bundler",
      "types": ["node", "express"],
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules"],
    "lib": ["esnext"]
}
